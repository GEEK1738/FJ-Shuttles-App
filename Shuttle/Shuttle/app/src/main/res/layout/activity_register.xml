<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        app:cardElevation="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="20dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear1"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/yellow">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:padding="1dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="Register"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout

        android:layout_below="@id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Fill in form to register."
            android:textStyle="italic"/>

        <TextView
            android:layout_below="@id/sign"
            android:id="@+id/emailT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Email"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_below="@id/emailT"
            android:id="@+id/emailTxt"
            android:hint="user@gmail.com"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/hgray"/>
        <TextView
            android:layout_below="@id/emailTxt"
            android:id="@+id/passT"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Password"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_below="@id/passT"
            android:id="@+id/passTxt"
            android:hint="enter password"
            android:textStyle="italic"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/hgray"/>

        <TextView
            android:layout_below="@id/passTxt"
            android:id="@+id/cpassT"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Confirm Password"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_below="@id/cpassT"
            android:id="@+id/cpassTxt"
            android:hint="enter password"
            android:textStyle="italic"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/hgray"/>

        <Button
            android:id="@+id/registerbtn"
            android:layout_below="@id/cpassTxt"
            android:layout_marginTop="25sp"
            android:layout_width="314dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_corner_button"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/black"
            android:text="Register" />

        <Button
            android:layout_below="@id/registerbtn"
            android:layout_marginTop="15sp"
            android:id="@+id/rloginbtn"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="10sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_centerHorizontal="true"
            android:layout_height="48dp"
            android:background="@drawable/invisable_button"
            android:text="Already have an account? Login" />

    </RelativeLayout>


</RelativeLayout>
</layout>